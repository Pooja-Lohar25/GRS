<%- include("partials/header") -%> 
    <div>
      <p>
        <%= message %>
      </p>
    </div>

    <form action="/dashboard/search" method="get">
      <div class="row" style="padding: 0px 10px 0 50px;">
        <div class="col-lg-10">
          <input type="text" class="form-control" name="search" placeholder="Search by issue/description" />
        </div>
        <div class="col-lg-2">
          <button type="Submit" value="search" class="btn-upvote">
          Search
          </button>
        </div>
      </div>
    </form>


      <section >
        <div class="container py-5">
          
      
          
            <div class="col-lg-12">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Issue</p>
                    </div>
                    <div class="col-sm-7">
                      <p class="text-muted mb-0"><b> <%= complaint[0].issue %> </b></p>
                    </div>
                    <div class="col-sm-2">
                        <!-- <p class="mb-0">Issue</p> -->
                        <button class="btn-upvote"> <a href="/upvotes/1">Upvote</a></button>
                      </div>
                     
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Description</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"> <%= complaint[0].description %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Status</p>
                    </div>
                    <div class="col-sm-3">
                      <p class="text-muted mb-0"><%= complaint[0].status %></p>
                    </div>
                    <div class="col-sm-3">
                        <p class="mb-0">Department</p>
                      </div>
                      <div class="col-sm-3">
                        <p class="text-muted mb-0"> <%= complaint[0].dept_id %></p>
                      </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Domain</p>
                    </div>
                    <div class="col-sm-3">
                      <p class="text-muted mb-0"> <%= complaint[0].domId %></p>
                    </div>
                    <div class="col-sm-3">
                        <p class="mb-0">Upvotes</p>
                      </div>
                      <div class="col-sm-3">
                        <p class="text-muted mb-0"><%= complaint[0].upvotes %></p>
                      </div>
                     
                      
                  </div>
                 
                 
                  
                </div>
              </div>
             
            </div>
          </div>
        </div>
      </section>

     


